@model IEnumerable<ProductsWebApp.Models.ProductModel>

<p>
    <a href="/product/Create/" class="btn btn-success">Create New</a>
</p>

<div class="container d-flex flex-wrap">

@foreach(var item in Model){
    <div id="card-number-@item.Id">
        <partial name="_productCard" model="item" />
    </div>
    }
</div>


<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Product</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="Id" class="control-label">ID</label>
                    <input id="modal-input-Id" for="Id" class="form-control" disabled/>
                    
                </div>
                <div class="form-group">
                    <label for="Name" class="control-label">Name</label>
                    <input id="modal-input-Name" for="Name" class="form-control" />
                    
                </div>
                <div class="form-group">
                    <label for="Price" class="control-label">Price</label>
                    <input id="modal-input-Price" for="Price" class="form-control" />
                    
                </div>
                <div class="form-group">
                    <label for="Description" class="control-label">Description</label>
                    <input id="modal-input-Description" for="Description" class="form-control" />
                   
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                <button id="save-button" type="button" class="btn btn-success" data-dismiss="modal">Save changes</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Product Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="Id" class="control-label">ID</label>
                    <input id="detail-modal-input-Id" for="Id" class="form-control" disabled />

                </div>
                <div class="form-group">
                    <label for="Name" class="control-label">Name</label>
                    <input id="detail-modal-input-Name" for="Name" class="form-control" disabled />

                </div>
                <div class="form-group">
                    <label for="Price" class="control-label">Price</label>
                    <input id="detail-modal-input-Price" for="Price" class="form-control" disabled />

                </div>
                <div class="form-group">
                    <label for="Description" class="control-label">Description</label>
                    <input id="detail-modal-input-Description" for="Description" class="form-control" disabled />

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>         
    </div>
</div>